"run similar": {
  "pattern": "^run\\s+similar$",
  "action": "analyze",
  "template": {
    "sections": [
      {
        "title": "Similar Files",
        "analysis": "Identify other files with related functionality and summarize effective solutions",
        "format": [
          "File: ${filename}",
          "- Role: ${role}",
          "- Key Patterns: ${designPatterns}",
          "- Error Handling: ${errorHandling}"
        ]
      },
      {
        "title": "Good Patterns vs. Anti-Patterns",
        "analysis": "Highlight which patterns should be adopted or avoided",
        "format": [
          "### Recommended Good Patterns",
          "- ${recommendedPattern}: ${explanation}",
          "### Anti-Patterns to Avoid",
          "- ${antipattern}: ${reason}"
        ]
      },
      {
        "title": "Proposed Uniformity Enforcement",
        "analysis": "Outline how to apply these patterns to the current error code",
        "format": [
          "### Implementation Steps",
          "1. ${step}",
          "2. ${step}",
          "### Impact / Risks",
          "- ${impact}"
        ]
      },
      {
        "title": "Sanity Check",
        "analysis": "Re-check findings for consistency or overlooked details",
        "format": [
          "### Double-Check Findings",
          "Check #1: ${description}",
          "Check #2: ${description}",
          "- Correction Needed: ${yes_or_no}",
          "- Explanation: ${details}"
        ]
      }
    ]
  }
}